<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodel="clr-namespace:View.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:MainVM}"
        mc:Ignorable="d"
        Title="Contacts" Height="403" Width="506" Icon="/contacts_96x96.ico">
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <GroupBox Header="Edit Contact" Grid.Row="0" Grid.Column="0" Margin="3">
            <StackPanel>
                <TextBlock Text="Name:" Margin="3"/>
                <TextBox TextWrapping="Wrap" Margin="3" Text="{Binding CurrentContact.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Text="Phone Number:" Margin="3"/>
                <TextBox TextWrapping="Wrap" Margin="3" Text="{Binding CurrentContact.PhoneNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Text="Email:" Margin="3"/>
                <TextBox TextWrapping="Wrap" Margin="3" Text="{Binding CurrentContact.Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Read Contact" Grid.Row="0" Grid.Column="1" Margin="3">
            <StackPanel>
                <TextBlock TextWrapping="Wrap" Text="Name:" Margin="3"/>
                <TextBlock TextWrapping="Wrap" Text="{Binding CurrentContact.Name}" Margin="3" FontWeight="Bold"/>
                <TextBlock TextWrapping="Wrap" Text="Phone Number:" Margin="3"/>
                <TextBlock TextWrapping="Wrap" Text="{Binding CurrentContact.PhoneNumber}" Margin="3" FontWeight="Bold"/>
                <TextBlock TextWrapping="Wrap" Text="Email:" Margin="3"/>
                <TextBlock TextWrapping="Wrap" Text="{Binding CurrentContact.Email}" FontWeight="Bold" Margin="3"/>
            </StackPanel>
        </GroupBox>
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button Content="Save" Width="75" Height="25" Command="{Binding SaveCommand}" CommandParameter="{Binding CurrentContact}" Margin="3"/>
            <Button Content="Load" Width="75" Height="25" Command="{Binding LoadCommand}" Margin="3"/>
        </StackPanel>
    </Grid>
</Window>
