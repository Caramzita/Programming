<Window x:Name="ContactWindow" x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View" xmlns:viewmodel="clr-namespace:View.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:MainVM}"
        mc:Ignorable="d"
        Title="Contacts" Height="403" Width="506" Icon="/contacts_96x96.ico">
    <Grid RenderTransformOrigin="0.509,0.475" Margin="0,0,0,0">
        <GroupBox x:Name="EditContactGroupBox" Header="Edit Contact" Margin="16,15,253,40">
            <StackPanel x:Name="EditContactPanel" HorizontalAlignment="Stretch" Margin="0,0,0,0">
                <Label x:Name="NameLabel" Content="Name:" Margin="3,3,3,3" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="0,0,0,0"/>
                <TextBox x:Name="NameTextBox" TextWrapping="Wrap" Width="190" FlowDirection="LeftToRight" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="3,3,3,3" Text="{Binding CurrentContact.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <Label x:Name="PhoneNumberLabel" Content="Phone Number:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="3,3,3,3" Padding="0,0,0,0"/>
                <TextBox x:Name="PhoneNumberTextBox" TextWrapping="Wrap" Width="190" HorizontalAlignment="Left" Margin="3,3,3,3" Text="{Binding CurrentContact.PhoneNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <Label x:Name="EmailLabel" Content="Email:" HorizontalAlignment="Left" Margin="3,3,3,3" VerticalAlignment="Top" HorizontalContentAlignment="Left" Padding="0,0,0,0"/>
                <TextBox x:Name="EmailTextBox" TextWrapping="Wrap" Width="190" AutomationProperties.IsColumnHeader="True" HorizontalAlignment="Left" Margin="3,3,3,3" Text="{Binding CurrentContact.Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalContentAlignment="Stretch" VerticalAlignment="Top"/>
            </StackPanel>
        </GroupBox>
        <GroupBox x:Name="ReadContactGroupBox" Header="Read Contact" HorizontalContentAlignment="Left" Margin="0,15,15,40" HorizontalAlignment="Right" Width="229">
            <StackPanel x:Name="ReadContactPanel">
                <Label x:Name="ContactNameLabel" Content="Name:" Padding="0,0,0,0" Margin="3,3,3,3" HorizontalAlignment="Left"/>
                <TextBlock x:Name="NameTextBlock" TextWrapping="Wrap" Text="{Binding CurrentContact.Name}" HorizontalAlignment="Left" Margin="3,3,3,3" FontWeight="Bold"/>
                <Label x:Name="ContactPhoneNumberLabel" Content="Phone Number:" HorizontalAlignment="Left" Padding="0,0,0,0" Margin="3,3,3,3"/>
                <TextBlock x:Name="PhoneNumberTextBlock" TextWrapping="Wrap" Text="{Binding CurrentContact.PhoneNumber}" Margin="3,3,3,3" HorizontalAlignment="Left" FontWeight="Bold"/>
                <Label x:Name="ContactEmailLabel" Content="Email:" Padding="0,0,0,0" Margin="3,3,3,3" HorizontalAlignment="Left"/>
                <TextBlock TextWrapping="Wrap" Text="{Binding CurrentContact.Email}" FontWeight="Bold" Margin="3,3,3,3" HorizontalAlignment="Left"/>
            </StackPanel>
        </GroupBox>
        <Button x:Name="SaveButton" Content="Save" Margin="0,0,95,10" Width="74" Height="25" Padding="3,3,1,3" HorizontalAlignment="Right" VerticalAlignment="Bottom" Command="{Binding SaveCommand}" CommandParameter="{Binding CurrentContact}"/>
        <Button x:Name="LoadButton" Content="Load" Margin="0,0,15,10" RenderTransformOrigin="0.23,-0.171" Width="75" Height="25" Padding="3,3,3,3" HorizontalAlignment="Right" VerticalAlignment="Bottom" Command="{Binding LoadCommand}"/>
    </Grid>
</Window>
